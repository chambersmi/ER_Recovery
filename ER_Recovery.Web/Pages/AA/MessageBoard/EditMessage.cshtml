@page "{messageId:int}"
@model ER_Recovery.Web.Pages.AA.MessageBoard.EditMessageModel
@{
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6">
            <h2 class="text-center mb-4">Edit Post</h2>
            <form id="addMessageForm" method="post">
                <input type="hidden" asp-for="EditMessageBoardDTO.MessageId" />
                <input type="hidden" asp-for="EditMessageBoardDTO.UserId" />
                <hr />

                <partial name="_Notifications" />

                <div class="mb-3">
                    <label for="EditMessageBoardDTO.Title" class="form-label">Title</label>
                    <input type="text" class="form-control id="description" asp-for="EditMessageBoardDTO.Title" />
                </div>

                <div class="mb-3">
                    <label for="EditMessageBoardDTO.Content" class="form-label">Content</label>
                    <textarea type="text" class="form-control id="description" asp-for="EditMessageBoardDTO.Content"></textarea>
                </div>


                <button type="submit" class="btn btn-primary me-2">Save</button>
                <button type="reset" class="btn btn-secondary me-2">Cancel</button>
                <a asp-page="/AA/MessageBoard/Index" class="btn btn-primary">Back</a>

            </form>
        </div>
    </div>
</div>
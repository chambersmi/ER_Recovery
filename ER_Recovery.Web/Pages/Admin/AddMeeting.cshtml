@page
@model ER_Recovery.Web.Pages.Admin.AddMeetingModel
@{

}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="text-center mb-4">Add Meeting</h2>
            <form id="addMeetingForm" method="post">
                <hr />

                <partial name="_Notifications" />

                <!-- MAKE SELECT DROPDOWN -->
                <div class="mb-3">
                    <label for="AddMeetingDTO.MeetingType" class="form-label">Meeting Type</label>
                    <select asp-for="AddMeetingDTO.MeetingType" asp-items="Model.MeetingTypeSelectList" class="form-select">
                        <option disabled selected>-Select Meeting Type-</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="AddMeetingDTO.Day" class="form-label">Day of Week</label>
                    <select asp-for="AddMeetingDTO.Day" asp-items="Model.DaysOfWeekSelectList" class="form-select">
                    <option disabled selected>-Select Day of Week-</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="AddMeetingDTO.Time" class="form-label">Time (HH:MM)</label>
                    <input type="text" class="form-control id="time" asp-for="AddMeetingDTO.Time" placeholder="HH:MM AM/PM (7:00 PM)" />
                </div>

                <div class="mb-3">
                    <label for="AddMeetingDTO.Description" class="form-label">Description</label>
                    <textarea type="text" class="form-control id="description" asp-for="AddMeetingDTO.Description"></textarea>
                </div>

                <div class="mb-3">
                    <label for="AddMeetingDTO.Location" class="form-label">Location Name (ie: Church)</label>
                    <input type="text" class="form-control id="location" asp-for="AddMeetingDTO.Location" />
                </div>

                <div class="mb-3">
                    <label for="AddMeetingDTO.Address" class="form-label">Address</label>
                    <input type="text" class="form-control id="address" asp-for="AddMeetingDTO.Address" />
                </div>

                <div class="mb-3">
                    <label for="AddMeetingDTO.City" class="form-label">City</label>
                    <input type="text" class="form-control id="city" asp-for="AddMeetingDTO.City" />
                </div>

                <div class="mb-3">
                    <label for="AddMeetingDTO.State" class="form-label">State</label>
                    <input type="text" class="form-control id="state" asp-for="AddMeetingDTO.State" />
                </div>

                <div class="mb-3">
                    <label for="AddMeetingDTO.OpenMeeting" class="form-label">Meeting Availability</label>
                    <select asp-for="AddMeetingDTO.OpenMeeting" class="form-select">
                        <option value="true">Open Meeting</option>
                        <option value="false">Closed Meeting</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">Save</button>


            </form>
        </div>
    </div>
</div>
